<% if object.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="mt-[50px] mb-[40px]">
    <div role="alert" class="alert alert-error flex flex-col items-start space-y-[10px] font-body text-base">
      <!-- エラーアイコンとメッセージの概要を横並びにする -->
      <div class="flex items-center space-x-[10px]">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-[25px] w-[25px] shrink-0 stroke-current"
          fill="none"
          viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="font-bold">
          <%= object.errors.count %><%= t('errors.error_count') %>
        </span>
      </div>
      <!-- 個別のエラーメッセージをリスト形式で表示 -->
      <ul class="list-disc list-inside text-error-content pl-[10px]">
        <% object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
