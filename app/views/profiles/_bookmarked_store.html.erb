<!-- 店舗の情報をdaisyUIのcardコンポーネントで表示するパーシャル -->
<div class="card bg-white w-full h-[300px] border-[2px] border-primary rounded-md">
  <!-- 店舗概要を表示する部分 -->
  <div class="card-body text-black shadow-md">
    <div class="flex flex-col justify-between space-y-[60px]">
      <!-- Google Mapsの評価とブックマークボタン -->
      <div class="flex justify-start items-center self-start space-x-7 w-full">
        <div class="flex justify-start items-center space-x-2">
          <i class="fa-solid fa-star text-[20px]"></i>
          <% if bookmarked_store.rating.present? %>
            <p class="text-sm text-black"><%= bookmarked_store.rating %></p>
          <% else %>
            <p class="text-sm text-black">-</p>
          <% end %>
        </div>

        <!-- ブックマークボタン -->
        <div class="flex flex-row text-accent text-xl">
          <%= render 'stores/bookmark_buttons', store: bookmarked_store %>
        </div>
      </div>

      <!-- 店舗名 -->
      <div class="flex justify-center items-center self-center space-x-4">
        <i class="fa-solid fa-mug-saucer text-[30px]"></i>
        <p class="text-black font-bold"><%= bookmarked_store.name %></p>
      </div>

      <!-- 店舗の詳細情報へのリンク -->
      <div class="text-center">
        <%= link_to t('profiles.show.to_show_store'), store_path(bookmarked_store), class: "btn btn-primary w-[200px] h-[50px]" %>
      </div>
    </div>
  </div>
</div>
