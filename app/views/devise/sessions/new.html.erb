<div class="flex flex-col items-center w-[700px] mx-auto my-[100px]">
  <div class="w-full text-black">
    <div class="text-center mb-[50px]">
      <h2 class="text-4xl font-bold font-heading"><%= t('devise.sessions.new.title') %></h2>
    </div>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class="field text-left text-base font-body mb-[40px] space-y-[10px]">
        <%= f.label :email, class: "w-full font-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-primary form-control w-full h-[50px] bg-white border-[3px] border-primary rounded-[10px]", placeholder: t('devise.sessions.new.input_email') %>
      </div>

      <div class="field text-left text-base font-body mb-[50px] space-y-[10px]">
        <%= f.label :password, class: "w-full font-bold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered input-primary form-control w-full h-[50px] bg-white border-[3px] border-primary rounded-[10px]", placeholder: t('devise.sessions.new.input_password') %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-center w-full mb-[50px]">
          <%= f.check_box :remember_me, class: "checkbox checkbox-primary border-[2px] mr-[10px]" %>
          <%= f.label :remember_me, class: "cursor-pointer font-body" %>
        </div>
      <% end %>

      <div class="actions text-center w-full mb-[50px]">
        <%= f.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary w-[200px] h-[50px]" %>
      </div>
    <% end %>
  </div>

  <div class="text-center font-body font-bold underline">
    <%= link_to t('devise.shared.links.sign_up'), new_user_registration_path %><br />
  </div>
</div>
