<div class="flex flex-col items-center w-[700px] mx-auto my-[100px]">
  <div class="w-full text-black">
    <div class="text-center font-bold space-y-[10px]">
      <h2 class="text-4xl font-heading"><%= t('devise.registrations.new.title') %></h2>
      <p class="text-base font-body">～ 投稿やブックマークが可能になります ～</p>
    </div>

    <%= form_with model: @user, url: user_registration_path, local: true do |f|  %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field text-left text-base font-body mt-[50px] mb-[40px] space-y-[10px]">
        <%= f.label :name, class: "w-full font-bold" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-bordered input-primary form-control w-full h-[50px] bg-white border-[3px] border-primary rounded-[10px]", placeholder: t('devise.registrations.new.account_validate') %>
      </div>

      <div class="field text-left text-base font-body mb-[40px] space-y-[10px]">
        <%= f.label :email, class: "w-full font-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-primary form-control w-full h-[50px] bg-white border-[3px] border-primary rounded-[10px]", placeholder: t('devise.registrations.new.input_email') %>
      </div>

      <div class="field text-left text-base font-body mb-[40px] space-y-[10px]">
        <%= f.label :password, class: "w-full font-bold" %>
        <% if @minimum_password_length %>
          <span>(<%= t('devise.registrations.new.minimum_password_length', password_length: @minimum_password_length) %>)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered input-primary form-control w-full h-[50px] bg-white border-[3px] border-primary rounded-[10px]", placeholder: t('devise.registrations.new.minimum_password_length', password_length: @minimum_password_length) %>
      </div>

      <div class="field text-left text-base font-body mb-[50px] space-y-[10px]">
        <%= f.label :password_confirmation, class: "w-full font-bold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered input-primary form-control w-full h-[50px] bg-white border-[3px] border-primary rounded-[10px]", placeholder: t('devise.registrations.new.re_input_password') %>
      </div>

      <div class="actions text-center w-full mb-[50px]">
        <%= f.submit t('devise.registrations.new.create'), class: "btn btn-primary w-[200px] h-[50px]" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>